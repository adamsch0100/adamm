# ===============================================
# SUPABASE CONFIGURATION
# ===============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===============================================
# SECURITY (REQUIRED FOR PRODUCTION)
# ===============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-encryption-key-here

# ===============================================
# APPLICATION CONFIGURATION
# ===============================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===============================================
# API KEYS (Stored in Supabase operator_settings table)
# ===============================================
# These are moved to Supabase for better security
# Configure via Supabase Dashboard → Table Editor → operator_settings

# MoreLogin API
# MORELOGIN_API_URL=https://api.morelogin.com
# MORELOGIN_API_ID=your-api-id
# MORELOGIN_SECRET_KEY=your-secret-key

# OpenAI API
# OPENAI_API_KEY=sk-your-openai-key

# Upload-Post API
# UPLOAD_POST_API_KEY=your-upload-post-key

# Whop Payments
# WHOP_API_KEY=whop-your-key

# n8n Webhook
# N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id

# ===============================================
# OPTIONAL SERVICES
# ===============================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# GOOGLE_SHEETS_API_KEY=your-google-sheets-key
# EMAIL_SERVICE_API_KEY=your-email-service-key

# ===============================================
# DEVELOPMENT PORTS
# ===============================================
# Frontend runs on 3001, Backend on 3000 by default
# NEXT_PUBLIC_FRONTEND_PORT=3001
# BACKEND_PORT=3000

