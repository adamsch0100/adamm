# MCP Server Configuration
MCP_PORT=3000

# MoreLogin API Configuration
# Get your API ID and Secret Key from MoreLogin Profile > API Settings
# Documentation: https://support.morelogin.com/en/collections/10925243-api
MORELOGIN_API_URL=https://api.morelogin.com
MORELOGIN_API_ID=your_api_id_here
MORELOGIN_SECRET_KEY=your_secret_key_here

# CoinMarketCap API Configuration
# Get your free API key from https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Email Alerts Configuration
# Email address to receive notifications and alerts
ALERT_EMAIL=your_email@example.com

# n8n Configuration
N8N_PORT=5678
N8N_HOST=localhost
N8N_PROTOCOL=http

# Optional: n8n Basic Auth (recommended for production)
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_password

# Optional: n8n Tunnel for external webhooks
N8N_TUNNEL_MODE=false

# Optional: Database (default is SQLite)
# For production, consider PostgreSQL
DB_TYPE=sqlite
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_HOST=localhost
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=your_db_password

# Execution Mode
EXECUTIONS_PROCESS=main
EXECUTIONS_MODE=regular

# Workflow Settings
NODE_FUNCTION_ALLOW_BUILTIN=*
NODE_FUNCTION_ALLOW_EXTERNAL=*

# Video Generation Strategy
# Options: unique (10 different videos), remix (1 master + 9 variations), ffmpeg (programmatic variations)
VIDEO_STRATEGY=unique

# CTA Mode - How to present "Visit minehedge.com"
# Options: video_overlay (burned into video), caption_only (in caption/bio), both (mix of overlay and caption)
CTA_MODE=both

# Number of videos to generate per topic (default: 10 for 10 accounts)
VIDEOS_PER_TOPIC=10

