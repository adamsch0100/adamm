# ===============================================
# PostPulse.io Production Environment Variables
# ===============================================
# Copy this file and fill in actual values for production deployment

# ===============================================
# SUPABASE CONFIGURATION
# ===============================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===============================================
# ENCRYPTION & SECURITY
# ===============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ===============================================
# API KEYS MANAGEMENT
# ===============================================
# NOTE: Most API keys are now stored in Supabase operator_settings table
# This allows the same keys to work locally and on Railway
# Configure these through the admin dashboard or via Supabase SQL:
#
# Services managed in Supabase operator_settings:
# - morelogin (API ID + Secret Key)
# - openai (GPT-4 + Sora video generation)
# - uploadpost (multi-platform posting)
# - whop (payment processing)
# - google (Veo video generation)
# - coinmarketcap (trending topics)
# - stripe (payment processing)

# ===============================================
# LEGACY ENVIRONMENT VARIABLES (DEPRECATED)
# ===============================================
# These are kept for backward compatibility but should be moved to Supabase
# MORELOGIN_API_URL=https://api.morelogin.com
# MORELOGIN_API_ID=your_morelogin_api_id
# MORELOGIN_SECRET_KEY=your_morelogin_secret_key
# OPENAI_API_KEY=your_openai_api_key
# UPLOAD_POST_API_KEY=your_upload_post_api_key
# GROK_API_KEY=your_grok_api_key

# ===============================================
# N8N WORKFLOW CONFIGURATION
# ===============================================
# Your n8n instance URL and authentication
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your_n8n_api_key

# ===============================================
# WHOP PAYMENT CONFIGURATION
# ===============================================
# Get from Whop dashboard
WHOP_API_KEY=your_whop_api_key
WHOP_WEBHOOK_SECRET=your_whop_webhook_secret

# ===============================================
# GOOGLE SHEETS CONFIGURATION (Optional)
# ===============================================
# For analytics export functionality
GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key

# ===============================================
# NEXT.JS PRODUCTION CONFIGURATION
# ===============================================
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_nextauth_secret_key

# ===============================================
# EMAIL CONFIGURATION (Optional)
# ===============================================
# For notifications and alerts
ALERT_EMAIL=admin@your-domain.com

# SMTP Configuration (if using custom email)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ===============================================
# MONITORING & LOGGING (Optional)
# ===============================================
# Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn

# LogRocket for session replay
# LOGROCKET_APP_ID=your_logrocket_app_id

# ===============================================
# PERFORMANCE & CACHING (Optional)
# ===============================================
# Redis for caching (if using Redis)
# REDIS_URL=redis://localhost:6379

# CDN Configuration
# CDN_URL=https://cdn.your-domain.com

# ===============================================
# SECURITY CONFIGURATION
# ===============================================
# JWT Secret for additional security
JWT_SECRET=your_jwt_secret_key

# CORS Origins (for API access)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ===============================================
# ANALYTICS & TRACKING (Optional)
# ===============================================
# Google Analytics
# GA_TRACKING_ID=GA-XXXXXXXXX

# Mixpanel
# MIXPANEL_TOKEN=your_mixpanel_token

# ===============================================
# BACKUP & MAINTENANCE
# ===============================================
# Database backup settings
DB_BACKUP_ENABLED=true
DB_BACKUP_FREQUENCY=daily
DB_BACKUP_RETENTION=30

# ===============================================
# FEATURE FLAGS
# ===============================================
# Enable/disable features in production
FEATURE_WHOP_PAYMENTS=true
FEATURE_GOOGLE_SHEETS_EXPORT=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BULK_OPERATIONS=true

# ===============================================
# RATE LIMITING
# ===============================================
# API rate limits
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=15min

# Content generation limits
CONTENT_GEN_DAILY_LIMIT=1000
CONTENT_GEN_MONTHLY_LIMIT=30000

# ===============================================
# EXTERNAL SERVICE LIMITS
# ===============================================
# OpenAI rate limits (requests per minute)
OPENAI_RPM_LIMIT=50
OPENAI_RPD_LIMIT=10000

# Upload-Post limits
UPLOAD_POST_DAILY_LIMIT=1000

# ===============================================
# DEPLOYMENT CONFIGURATION
# ===============================================
# Railway-specific settings
RAILWAY_PROJECT_ID=your_railway_project_id
RAILWAY_ENVIRONMENT=production

# Build settings
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_VERSION=1.0.0
